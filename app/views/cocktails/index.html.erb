<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://images.unsplash.com/photo-1438522014717-d7ce32b9bab9?auto=format&fit=crop&w=1498&q=60&ixid=dW5zcGxhc2guY29tOzs7Ozs%3D');">
  <div class="banner-content">
    <h1>Cocktails</h1>
    <p id="remove-bottom-margin">The ultimate cocktail recipe app</p>
    <%= link_to "Create new cocktail", new_cocktail_path, class: "btn btn-primary btn-lg", id: "cocktail-index" %>
  </div>
</div>

<div class="container">
  <div class="row">
    <% @cocktails.each do |c| %>
    <div class="col-xs-12 col-sm-4">
      <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path c.photo.path, height: 300, width: 400, crop: :fill, default_image: "cocktail.jpg"; %>')">
        <div class="card-description">
          <h2><%= c.name.capitalize %></h2>
        </div>
        <%= link_to "", cocktail_path(c), class: "card-link" %>
      </div>
    </div>
    <% end %>
   </div>
</div>
