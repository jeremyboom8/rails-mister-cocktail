<div class="container">
  <div class="row">
    <div class="col-xs-12">
			<h1>Cocktail <%= @cocktail.name %></h1>
		</div>

    <div class="col-xs-6">
			
			<% @doses.each do |d| %>
				<%= "#{d.description} of #{d.ingredient.name}" %> |
				<%= link_to dose_path(d), method: :delete do %>
					<i class="fa fa-trash-o" aria-hidden="true"></i>
				<% end %>
				<br>
			<% end %>
      
    </div>
    <div class="col-xs-6">
    	<h3>New dose</h3>
			<%= simple_form_for [@cocktail, @dose] do |d| %>
				<%= d.input :description %>
				<%= d.association :ingredient %>
				<%= d.submit "Add a dose" %>
			<% end %>

    </div>
  </div>
</div>



